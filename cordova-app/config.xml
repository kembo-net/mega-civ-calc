<?xml version='1.0' encoding='utf-8'?>
<widget id="net.kembo.mega_civ_calc" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MegaCivCalc</name>
    <description>
      MegaCiv計算機だよ。MegaCivの資源の額を計算するすごいやつだよ。
    </description>
    <author email="lupin@kembo.org" href="http://www.kembo.org">
        けんぼー
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
